{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev Monitor",
      "detail": "Start src/main.py through watchmedo",
      "type": "shell",
      "command": "scripts/dev-monitor.sh",
      "icon": {
        "color": "terminal.ansiGreen",
        "id": "play"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      }
    },
    {
      "label": "Test Monitor",
      "detail": "Run tests",
      "type": "shell",
      "command": "scripts/test-monitor.sh",
      "args": [
        "${file}"
      ],
      "icon": {
        "color": "terminal.ansiYellow",
        "id": "beaker"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      }
    }
  ]
}
